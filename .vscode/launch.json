{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug full stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next", // ここを変更
      "args": ["dev"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "- Local: {2,}(https?://localhost:\\d+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}